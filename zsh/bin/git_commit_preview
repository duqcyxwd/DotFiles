#!/bin/bash

echo "Sha1: " "$@"

git show --stat --stat-width=80 --color=always --compact-summary "$@"
echo ""
git --no-pager show --color=always --format=format:"" "$@"

echo ""
echo "-------------------------------------------------------------------------------"
echo ""

